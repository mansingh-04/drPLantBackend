generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  profileImage Bytes?
  plants       Plant[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Plant {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  species     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  images      PlantImage[]
  logs        PlantLog[]
  recommendations AIRecommendation[]
  careTips        CareTip[]
}

model PlantImage {
  id       Int      @id @default(autoincrement())
  plant    Plant    @relation(fields: [plantId], references: [id])
  plantId  Int
  imageData Bytes
  createdAt DateTime @default(now())
  recommendations AIRecommendation[]
}

model PlantLog {
  id        Int      @id @default(autoincrement())
  plant     Plant    @relation(fields: [plantId], references: [id])
  plantId   Int
  logType   String
  logValue  String?
  logDate   DateTime
  note      String?
  createdAt DateTime @default(now())
}

model AIRecommendation {
  id             Int      @id @default(autoincrement())
  plant          Plant    @relation(fields: [plantId], references: [id])
  plantId        Int
  species        String?
  disease        String?
  suggestionText String
  imageUrl       String?
  createdAt      DateTime @default(now())
  plantImage     PlantImage? @relation(fields: [plantImageId], references: [id], onDelete: Cascade)
  plantImageId   Int?
  careTips       CareTip[]
}

model CareTip {
  id               Int               @id @default(autoincrement())
  plant            Plant             @relation(fields: [plantId], references: [id], onDelete: Cascade)
  plantId          Int
  tips             String // Storing JSON string now
  logsUsed         String? // The user logs used to generate this tip
  recommendation   AIRecommendation? @relation(fields: [recommendationId], references: [id])
  recommendationId Int?
  createdAt        DateTime          @default(now())
}